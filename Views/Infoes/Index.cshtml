                            confirmed: "Confirmed",
                            days: result[i].days,
                            zone: result[i].zone
                        }
                        editar(id,miObjeto);
                    }
                };
                
            },
            error: function () {
                alert('Error al obtener la información.');
            }
        });
        
    }
    function StatusChangerDeny(user,id) {
        debugger;
        $.ajax({
            url: '@Url.Action("ShowSearchUserResultsToEdit", "Infoes")',
            type: 'GET',
            data: { SearchUser: user },
            success: function (result) {
                //solo verificadores, este codigo despues se comenta o se borra
                for (let i = 0; i < result.length; i++) {
                    debugger;
                    if (id == result[i].id) {
                        const id = result[i].id;
                        const miObjeto = {
                            id: result[i].id,
                            name: result[i].name,
                            requested: result[i].requested,
                            confirmed: "Denied",
                            days: result[i].days,
                            zone: result[i].zone
                        }
                        editar(id, miObjeto);
                    }
                };

            },
            error: function () {
                alert('Error al obtener la información.');
            }
        });
        
    }

    function editar(id, miObjeto) {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("EditIndex", "Infoes")',
            data: miObjeto,
            success: function (result) {
                location.reload();
            },
            error: function () {
                alert("Ocurrió un error al realizar la operación.");
            }
        });
    }

</script>