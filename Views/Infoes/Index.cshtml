                    <h4>
                        @Html.DisplayNameFor(model => model.Name) and dates
                    </h4>
                
                </th>
            }
            else
            {
                <th class="toptable">
                    <h4>
                        Dates
                    </h4>
                </th>
            }

            <th class="toptable">
                <h4>
                    @Html.DisplayNameFor(model => model.Days)
                </h4>
            </th>
            @if (@User.Identity?.Name == "admin@tech.unipartner.com")
                {
                <th class="toptable">
                    <h4>Reply</h4>
                </th>
                <th class="toptable">
                    <h4>Status</h4>
