@model IEnumerable<FeriasApp.Models.Info>

@{
    ViewData["Title"] = "Index";
    string info = "";
    string[] miArray = { };
    int days = 0;
    int totalmarcado = 0;
    int totalfalta = 0;
}


    
    @foreach (var item in Model)
    {
